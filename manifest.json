{
    "manifest_version": 2,
    "name": "Wikipedia Darkmode & Search Wikipedia",
    "version": "1.3.2",
    "description": "A simple Wikipedia Darkmode with the function to QuickSearchâ„¢ Wikipedia threw the Context-Menu by the HuhnCompany.",
    "options_page": "html/options.html",
    "icons": {
        "128": "img/128.png",
        "48": "img/48.png",
        "16": "img/16.png"
    },
    "browser_action":{
        "default_icon": "img/16.png",
        "default_popup": "html/popup.html"
    },
    "content_scripts": [
        {
          "matches": ["https://*.wikipedia.org/*"],
          "css": ["css/wiki_theme.css"]
        }
    ],
    "background":{
        "scripts": [
            "background/contextMenu.js"
        ],
        "persistent": false
    },
    "permissions":[
        "contextMenus"
    ]
}